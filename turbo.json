{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env"],
  "globalEnv": ["ELECTRON_RUN_AS_NODE"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "env": ["ELECTRON_RUN_AS_NODE"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "env": ["ELECTRON_RUN_AS_NODE"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true,
      "env": ["ELECTRON_RUN_AS_NODE"]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "env": ["ELECTRON_RUN_AS_NODE"]
    },
    "clean": {
      "cache": false
    }
  }
}
