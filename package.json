{
  "name": "stroma",
  "private": true,
  "packageManager": "pnpm@10.11.1",
  "type": "module",
  "scripts": {
    "with-node-opts": "cross-env TURBO_UI=stream NODE_OPTIONS=\"--max-old-space-size=4096 --throw-deprecation --disable-warning=DEP0169\" ELECTRON_RUN_AS_NODE=1",
    "dev": "cross-env NODE_OPTIONS= tsx apps/desktop/scripts/dev.ts",
    "dev:desktop": "cross-env NODE_OPTIONS= tsx apps/desktop/scripts/dev.ts",
    "build": "pnpm run with-node-opts turbo build",
    "lint": "pnpm run with-node-opts turbo lint",
    "test": "pnpm run with-node-opts turbo test",
    "test:watch": "pnpm run with-node-opts turbo test:watch",
    "typecheck": "pnpm run with-node-opts turbo typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "cross-env TURBO_UI=stream turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "cross-env": "^10.1.0",
    "@testing-library/react": "^16.2.0",
    "@vitest/ui": "^4.0.16",
    "jsdom": "^27.4.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "turbo": "^2.3.3",
    "typescript": "5.9.3",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild"
    ]
  },
  "prettier": "@repo/prettier-config"
}
