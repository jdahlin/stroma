{
  "name": "stroma",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.27.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "with-node-opts": "cross-env TURBO_UI=stream NODE_OPTIONS=\"--max-old-space-size=4096 --throw-deprecation --disable-warning=DEP0169\" ELECTRON_RUN_AS_NODE=1",
    "dev": "cross-env NODE_OPTIONS= tsx scripts/dev-desktop.ts",
    "dev:desktop": "cross-env NODE_OPTIONS= tsx scripts/dev-desktop.ts",
    "dev:editor": "pnpm --filter @repo/editor-standalone-web dev",
    "check": "pnpm -s run with-node-opts turbo run typecheck lint test --log-prefix=none --output-logs=errors-only",
    "start": "pnpm -s --filter @repo/main exec electron .",
    "build": "pnpm -s run with-node-opts turbo build",
    "lint": "pnpm -s run with-node-opts turbo lint --log-prefix=none --output-logs=errors-only",
    "test": "pnpm -s run with-node-opts turbo test --log-prefix=none",
    "test:watch": "pnpm run with-node-opts turbo test:watch",
    "test:coverage": "pnpm run with-node-opts turbo test -- --coverage",
    "typecheck": "pnpm -s run with-node-opts turbo typecheck --log-prefix=none --output-logs=errors-only",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "cross-env TURBO_UI=stream turbo clean --log-prefix=none --output-logs=errors-only && rm -rf node_modules",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,mjs,json}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "knip": "^5.79.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "turbo": "^2.7.2",
    "typescript": "5.9.3",
    "vitest": "^4.0.16"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "electron",
      "esbuild"
    ]
  },
  "prettier": "@repo/prettier-config"
}
