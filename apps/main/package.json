{
  "name": "@repo/main",
  "type": "module",
  "version": "0.1.6",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --format=esm --sourcemap --tsconfig=tsconfig.json --outfile=dist/index.mjs --external:electron --external:better-sqlite3 --conditions=import",
    "rebuild:electron": "cross-env ELECTRON_RUN_AS_NODE=1 npm_config_runtime=electron npm_config_target=39.2.7 npm_config_disturl=https://electronjs.org/headers npm_config_build_from_source=true pnpm rebuild better-sqlite3",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@repo/core": "workspace:*",
    "@repo/storage": "workspace:*",
    "better-sqlite3": "^12.5.0",
    "electron": "39.2.7"
  },
  "devDependencies": {
    "@repo/preload": "workspace:*",
    "@repo/renderer": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "@types/node": "^22.12.0",
    "esbuild": "^0.27.2",
    "typescript": "5.9.3"
  }
}
