{
  "extends": "@repo/tsconfig/node.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "outDir": "dist/main",
    "paths": {
      "@core": ["../../packages/core/src/index.ts"],
      "@core/*": ["../../packages/core/src/*"],
      "@shared": ["../../packages/shared/src/index.ts"],
      "@shared/*": ["../../packages/shared/src/*"],
      "@ux": ["../../packages/ux/src/index.ts"],
      "@ux/*": ["../../packages/ux/src/*"]
    },
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "bundler"
  },
  "include": [
    "src/main"
  ]
}
